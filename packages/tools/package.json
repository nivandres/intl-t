{
  "name": "@intl-t/tools",
  "description": "i18n utilities",
  "version": "1.0.3",
  "type": "module",
  "license": "MIT",
  "homepage": "https://intl-t.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivandres/intl-t.git",
    "directory": "packages/tools"
  },
  "author": {
    "name": "Ivan Vargas",
    "email": "nivnnd@gmail.com",
    "url": "https://nivan.dev"
  },
  "files": [
    "dist/*"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "keywords": [
    "intl",
    "formatter"
  ],
  "scripts": {
    "build": "tsc -b",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "bump": "bun pm version",
    "release": "bun publish --access public"
  },
  "dependencies": {
    "@intl-t/declarations": "workspace:^",
    "@intl-t/format": "workspace:^",
    "@intl-t/global": "workspace:^",
    "@intl-t/locales": "workspace:^"
  }
}
