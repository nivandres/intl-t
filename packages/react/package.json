{
  "name": "@intl-t/react",
  "description": "A Fully-Typed Object-Based i18n Translation Library for React",
  "version": "1.0.1",
  "type": "module",
  "license": "MIT",
  "homepage": "https://intl-t.dev",
  "repository": {
    "url": "https://github.com/nivandres/intl-t",
    "type": "git",
    "directory": "packages/react"
  },
  "author": {
    "name": "Ivan Vargas",
    "email": "nivnnd@gmail.com",
    "url": "https://nivan.dev"
  },
  "files": [
    "dist/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./translation": {
      "types": "./dist/translation.d.ts",
      "default": "./dist/translation.js"
    },
    "./context": {
      "types": "./dist/context.d.ts",
      "default": "./dist/context.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./inject": {
      "types": "./dist/inject.d.ts",
      "default": "./dist/inject.js"
    },
    "./patch": {
      "types": "./dist/patch.d.ts",
      "default": "./dist/patch.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "default": "./dist/hooks.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    }
  },
  "keywords": [
    "translation",
    "i18n",
    "intl",
    "typescript",
    "react",
    "node",
    "nodes",
    "object-based",
    "node-based",
    "translate",
    "formatter",
    "tree",
    "next",
    "next.js"
  ],
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "bump": "bun pm version",
    "release": "bun publish --access public"
  },
  "dependencies": {
    "@intl-t/core": "workspace:^",
    "@intl-t/format": "workspace:^",
    "@intl-t/global": "workspace:^",
    "@intl-t/types": "workspace:^"
  },
  "peerDependencies": {
    "react": ">=18 <20"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
