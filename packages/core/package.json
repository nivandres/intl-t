{
  "name": "@intl-t/core",
  "description": "A Fully-Typed Node-Based i18n Translation Library",
  "version": "1.0.3",
  "type": "module",
  "license": "MIT",
  "homepage": "https://intl-t.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivandres/intl-t.git",
    "directory": "packages/core"
  },
  "author": {
    "name": "Ivan Vargas",
    "email": "nivnnd@gmail.com",
    "url": "https://nivan.dev"
  },
  "files": [
    "dist/*"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "keywords": [
    "translation",
    "i18n",
    "intl",
    "typescript",
    "object-based",
    "node-based",
    "translate",
    "tree"
  ],
  "scripts": {
    "build": "tsc -b",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "bump": "bun pm version",
    "release": "bun publish --access public"
  },
  "dependencies": {
    "@intl-t/format": "workspace:^",
    "@intl-t/global": "workspace:^",
    "@intl-t/locales": "workspace:^"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
