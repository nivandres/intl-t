{
  "name": "@intl-t/next",
  "description": "A Fully-Typed Object-Based i18n Translation Library for Next.js",
  "version": "1.0.1",
  "type": "module",
  "license": "MIT",
  "homepage": "https://intl-t.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivandres/intl-t.git",
    "directory": "packages/next"
  },
  "author": {
    "name": "Ivan Vargas",
    "email": "nivnnd@gmail.com",
    "url": "https://nivan.dev"
  },
  "files": [
    "dist/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    },
    "./link": {
      "types": "./dist/link/index.d.ts",
      "default": "./dist/link/index.js"
    }
  },
  "keywords": [
    "translation",
    "i18n",
    "intl",
    "typescript",
    "react",
    "node",
    "nodes",
    "object-based",
    "node-based",
    "translate",
    "formatter",
    "tree",
    "next",
    "next.js"
  ],
  "scripts": {
    "build": "tsc -b",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "bump": "bun pm version",
    "release": "bun publish --access public"
  },
  "dependencies": {
    "@intl-t/core": "workspace:^",
    "@intl-t/global": "workspace:^",
    "@intl-t/react": "workspace:^",
    "@intl-t/tools": "workspace:^"
  },
  "peerDependencies": {
    "next": ">=14",
    "react": ">=18 <20"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  }
}
