{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "test", "dist", "examples"],
  "include": ["src"]
}
