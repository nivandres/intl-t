{
  "compilerOptions": {
    "allowArbitraryExtensions": true,
    "composite": true,
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@intl-t/core": ["./packages/core/src"],
      "@intl-t/core/*": ["./packages/core/src/*"],
      "@intl-t/declarations": ["./packages/declarations/src"],
      "@intl-t/declarations/*": ["./packages/declarations/src/*"],
      "@intl-t/format": ["./packages/format/src"],
      "@intl-t/format/*": ["./packages/format/src/*"],
      "@intl-t/global": ["./packages/global/src"],
      "@intl-t/global/*": ["./packages/global/src/*"],
      "@intl-t/locales": ["./packages/locales/src"],
      "@intl-t/locales/*": ["./packages/locales/src/*"],
      "@intl-t/next": ["./packages/next/src"],
      "@intl-t/next/*": ["./packages/next/src/*"],
      "@intl-t/react": ["./packages/react/src"],
      "@intl-t/react/*": ["./packages/react/src/*"],
      "@intl-t/tools": ["./packages/tools/src"],
      "@intl-t/tools/*": ["./packages/tools/src/*"],
      "intl-t": ["./packages/core/src/index.ts"],
      "intl-t/*": ["./packages/core/src/*"]
    }
  },
  "references": [
    { "path": "packages/core" },
    { "path": "packages/declarations" },
    { "path": "packages/format" },
    { "path": "packages/global" },
    { "path": "packages/locales" },
    { "path": "packages/next" },
    { "path": "packages/react" },
    { "path": "packages/tools" }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "test", "app", "dist", "packages"]
}
